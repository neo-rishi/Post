	</tr>
	<tr>
			<td><%=label_tag :Upload %></td>
			<td><%=file_field_tag :file %></td>
	</tr>
	<tr>
			<td><%=label_tag :Color %></td>
			<td><%=color_field_tag :color %></td>
	</tr>
	<tr>
			<td><%=label_tag :Mobile %></td>
			<td><%=phone_field_tag :mobile %></td>
	</tr>
	<tr>
			<td><%=label_tag :Hobby %></td>
			<td><%=select_tag :hobby, options_for_select([ 'select hobby',"Sport", "Read", 'Search', 'Travelling', 'Chat' ])%></td>

