<%= form_tag( user_info_posts_path, method: :post) do -%>
<table>
	<tr>
			<td><%=label_tag :Name%></td>
			<td><%=text_field_tag :name %></td>
	</tr>
	<tr>
			<td><%=label_tag :Last_Name %></td>
			<td><%=text_field_tag :lname %></td>
	</tr>
	<tr>
			<td><%=label_tag :Gender %></td>
			<td><%=label_tag :M %>&nbsp;&nbsp;<%=radio_button_tag :gender, 'male' %>&nbsp;&nbsp;<%=label_tag :F%><%=radio_button_tag :gender, 'Fe-male' %> </td>   

	</tr>
	<tr>
			<td><%=label_tag :Date %></td>
			<td><%=date_field_tag :date %></td>

	</tr>
